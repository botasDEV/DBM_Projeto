<html>
    <head>
        <title>{{pageTitle}}</title>
        <link rel="stylesheet" type="text/css" href="../css/backoffice.css">
    </head>
    <body>
        <h2>{{pageTitle}}</h2>
        {{#data}}
        <table>
            {{#item}}
            <tr>
                <td>
                    <img src="{{imageUrl}}" alt="{{imageCaption}}" title="{{imageCaption}}" />
                </td>
                <td>
                    {{#data}}
                    <p style="text-transform: capitalize;">
                        <b>{{key}}</b><br/>
                        {{value}}
                    </p>
                    {{/data}}
                </td>
            </tr>
            {{/item}}
        </table>
        {{/data}}
        {{#empty}}
            <p class="listEmpty">{{.}}</p>
        {{/empty}}
        <div class="add"></div>
    </body>
</html>